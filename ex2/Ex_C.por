programa {
  funcao inicio() {
     /* C - Olá mundo pedindo para o usuário digitar e mostrar o que digitou */

    escreva("Digite a palavra mágica para fugir da maldição!: \n")
    cadeia resposta
    leia(resposta)

    se (resposta == "Olá, mundo!"){
      escreva(resposta)
    }
    senao{
      escreva("Errado!!!!")
    }

  }
}
